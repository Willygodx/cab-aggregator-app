<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="Ruslan Alhava">
        <createTable tableName="car">

            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_car"/>
            </column>

            <column name="color"
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="car_brand"
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="car_number"
                    type="VARCHAR(12)">
                <constraints nullable="false"/>
            </column>

            <column name="is_deleted"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="car"/>
        </rollback>
    </changeSet>

    <changeSet id="2"
               author="Ruslan Alhava">

        <createTable tableName="driver">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_driver"/>
            </column>

            <column name="first_name"
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name"
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="email"
                    type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="phone_number"
                    type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="sex"
                    type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="is_deleted"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="driver"/>
        </rollback>
    </changeSet>

    <changeSet id="3"
               author="Ruslan Alhava">
        <createTable tableName="driver_car">
            <column name="car_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="driver_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="driver_car"/>
        </rollback>
    </changeSet>

    <changeSet id="4"
               author="Ruslan Alhava">
        <addUniqueConstraint columnNames="car_number"
                             constraintName="uc_car_car_number"
                             tableName="car"/>
        <rollback>
            <dropUniqueConstraint constraintName="uc_car_car_number"
                                  tableName="car"/>
        </rollback>
    </changeSet>

    <changeSet id="5"
               author="Ruslan Alhava">
        <addUniqueConstraint columnNames="email"
                             constraintName="uc_driver_email"
                             tableName="driver"/>
        <rollback>
            <dropUniqueConstraint constraintName="uc_driver_email"
                                  tableName="driver"/>
        </rollback>
    </changeSet>

    <changeSet id="6"
               author="Ruslan Alhava">
        <addUniqueConstraint columnNames="phone_number"
                             constraintName="uc_driver_phone_number"
                             tableName="driver"/>
        <rollback>
            <dropUniqueConstraint constraintName="uc_driver_phone_number"
                                  tableName="driver"/>
        </rollback>
    </changeSet>

    <changeSet id="7"
               author="Ruslan Alhava">
        <addForeignKeyConstraint baseColumnNames="car_id"
                                 baseTableName="driver_car"
                                 constraintName="fk_dricar_on_car"
                                 referencedColumnNames="id"
                                 referencedTableName="car"/>

        <rollback>
            <dropForeignKeyConstraint constraintName="fk_dricar_on_car"
                                      baseTableName="driver_car"/>
        </rollback>
    </changeSet>

    <changeSet id="8"
               author="Ruslan Alhava">
        <addForeignKeyConstraint baseColumnNames="driver_id"
                                 baseTableName="driver_car"
                                 constraintName="fk_dricar_on_driver"
                                 referencedColumnNames="id"
                                 referencedTableName="driver"/>

        <rollback>
            <dropForeignKeyConstraint constraintName="fk_dricar_on_driver"
                                      baseTableName="driver_car"/>
        </rollback>
    </changeSet>

</databaseChangeLog>